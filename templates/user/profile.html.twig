{% extends 'base.html.twig' %}

{% block main %}
  <h1>Добър ден {{ user.username }}</h1>

    <h3> {{ user.name }}</h3>

  <p> Име: {{ user.company.name }}</p>
  <p> Булстат: {{ user.company.bulstat }}</p>
  <p> ДДС номер: {{ user.company.vat }}</p>
  <p> Адрес: {{ user.company.address }}</p>
  <p> МОЛ: {{ user.company.owner }}</p>
  <p> Банка: {{ user.company.bankName }}</p>
  <p> Iban: {{ user.company.iban }}</p>
  <p> BIC: {{ user.company.bic }}</p>
  {% if is_granted('ROLE_ADMIN') %}
  <h1>Потребители</h1>

  <table class="table" >
    <thead>
    <tr>
      <th>Номер</th>
      <th>Потребителско име</th>
      <th>Име</th>
      <th>Действие</th>
    </tr>
    </thead>
    <tbody>

    {% for user in users %}
      <tr>
        <td>{{ user.id }}</td>
        <td>{{ user.username }}</td>
        <td>{{ user.name }}</td>
        <td>
          
          <a href="{{ path('user_show', {'id': user.id}) }}">Покажи</a>
          <a href="{{ path('user_edit', {'id': user.id}) }}">Редактирай</a>
        </td>
      </tr>
    {% else %}
      <tr>
        <td colspan="4">no records found</td>
      </tr>
    {% endfor %}
    </tbody>
  </table>

  <a href="{{ path('user_new') }}">Създай нов потребител</a>
    {% endif %}
{% endblock %}

